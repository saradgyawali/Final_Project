<div class="row">
  <div class="col-md-3">
    <h2>Hello <%= current_user.name %></h2>
    <hr>
    <p><strong>Email:</strong> <%= current_user.email %></p>
    <p><strong>Age:</strong> <%= current_user.age %></p>
    <p><strong>Sex:</strong> <%= current_user.sex %></p>
    <p><strong>Weight:</strong> <%= current_user.weight %></p>
    <p><strong>Height:</strong> <%= current_user.height %></p>

    <%= link_to "Edit Your Profile", edit_profile_path, class: "btn btn-default" %> 


    <% if false %>
    <p><strong>Recipes:</strong> <%= current_user.recipes.count %></p>
    <% end %> 
  </div>


  <% if false %>

  <div class="col-md-6">
    <h2>Your Recipes</h2>
    <hr>
    <% if current_user.recipes.any? %>
      <% current_user.recipes.each do |recipe| %>
        <h4>
          <%= recipe.name %>
          <span class="pull-right">
            <%= link_to "View Recipe", recipe_path(recipe), class: "btn btn-default pull-right" %>
          </span>
        </h4>
        <p><%= recipe.instructions %></p>
        <hr>
      <% end %>
    <% else %>
      <p>You don't have any recipes yet!</p>
      <hr>
    <% end %>
    <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-default" %>

    <% end %> 
  </div>
</div>