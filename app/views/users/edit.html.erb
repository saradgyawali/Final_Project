<hr>
<div class="well">
  <h3><center>Edit Your Profile</center></h3>
</div>

<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <br>
    <div class="signupbox">
      <%= form_for @user do |f| %>
        <%= f.label :name, "Name" %>:
        <%= f.text_field :name, class:"form-control", placeholder:"ex. MrMacintosh", required: true %><br />
        <%= f.label :email, "Email" %>:
        <%= f.email_field :email, class:"form-control", placeholder:"ex. hello@google.com", required: true %><br />
        <%= f.label :password, "Password" %>:
        <%= f.password_field :password, class:"form-control", placeholder:"don't use password as your password", required: true %><br />

        <%= f.label :age, "Age" %>:
        <%= f.text_field :age, class:"form-control", placeholder:"ex. 24", required: true %><br />
        <%= f.label :sex, "Gender" %>:
		<%= f.select :sex, %w{Male Female}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %><br />
		<br> 
        <%= f.label :weight, "Weight" %>:
        <%= f.text_field :weight, class:"form-control", placeholder:"ex. 170 lbs", required: true %><br />
        <%= f.label :height, "Height" %>:
        <%= f.text_field :height, class:"form-control", placeholder:"ex. 6", required: true %><br /> 
        
        <%= f.submit "Update!", class:"btn btn-primary form-control" %>
      <% end %>
      <br>
      <br>
    </div>
  </div>
</div>
